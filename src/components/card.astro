---
interface Props {
    title: string;
    description: string;
    image: string;
    alt: string;
}
const {title, description, image, alt} = Astro.props
---
<article class="mt-2 ratio ratio-1x1 rounded-3 overflow-hidden">
    <header class="z-2 w-100 h-100 d-flex align-items-end justify-content-between p-4">
        <div>
            <h1 class="fw-bold fs-4 mb-0 text-white">{title}</h1>
            <p class="text-white m-0">{description}</p>
        </div>
        <div>
            <button class="btn btn-outline-light border-2 rounded-pill">
                <i class="bi bi-arrow-right-short fs-4"></i>
            </button>
        </div>
    </header>
    <div class="bg-dark bg-opacity-50 h-100 w-100 z-1"></div>
    <img src={image} alt={alt} class="img-fluid object-fit-cover object-position-top">
</article>
<style>
	.object-position-top {
		object-position: top;
	}
</style>